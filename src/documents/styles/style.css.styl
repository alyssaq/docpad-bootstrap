a, a:link
	cursor pointer

body
	padding-top 20px
   padding-bottom @padding-top * 2

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

h3
  font-size 18px 

input[type="file"]
  display:none

.container-narrow 
  margin: 0 auto
  width 80%

.container-narrow > hr 
  margin 30px 0
.container-fill
  width 100%
  min-width 600px
/* Main marketing message and sign up button */
.jumbotron 
  text-align center
.jumbotron h1 
  font-size 72px
  line-height 1
.jumbotron .btn 
  font-size 21px
  padding 14px 24px


#drawingCanvas
  border 1px dashed #ccc
  cursor crosshair

#btnLinewidth
  max-width 50px
  border none

#arrow
  height: 40px;
  width: 60px;
  background: #4e99b8;
  margin: 20px 0 20px 20px;
  position: relative;

#arrow:before
  content: "";
  position: absolute;
  bottom: -10px;
  left: 20px;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 10px solid #4e99b8;
$mT = 10px
$bar = 70px
$initialOpacity = 0.1
.btnDraw
  width 100%
  padding 15px

.arrow-down 
  width: 0
  height: 0
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid white
  margin 0 auto

#btnEraser
  background-color lightgrey
#btnClear
  margin-top $mT * 2


#uploader
  height $bar
#drawingTools
  margin-top $bar
  opacity $initialOpacity

#btnImgSelect
  color black
#btnDone
  opacity $initialOpacity
  margin-right 10%

#btnClear
  vertical-align bottom
  margin-left $mT * 2
#imageInfo
  padding $mT
#resultCanvas
  margin-top $mT
  margin-left $mT
/* Drop box styles */
#drop 
  margin-top $mT
  border $mT dashed #ccc
  width 95% 
  height 300px
  float left
#drop.hover
  border $mT dashed #0c0
img 
  vertical-align top