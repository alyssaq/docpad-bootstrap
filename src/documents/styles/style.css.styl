a, a:link
	cursor pointer

body
	padding-top 20px
   padding-bottom @padding-top * 2

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

input[type="file"]
  display:none

.container-narrow 
  margin: 0 auto
  max-width: 700px

.container-narrow > hr 
  margin 30px 0

/* Main marketing message and sign up button */
.jumbotron 
  text-align center
.jumbotron h1 
  font-size 72px
  line-height 1
.jumbotron .btn 
  font-size 21px
  padding 14px 24px


#drawingCanvas
  border 1px dashed #ccc
  cursor crosshair

#btnLinewidth
  max-width 50px

$mT = 10px
#btnClear
  vertical-align bottom
  margin-left $mT * 2
#imageInfo
  padding $mT
#resultCanvas
  margin-top $mT
  margin-left $mT
/* Drop box styles */
#drop 
  border $mT dashed #ccc
  width 300px 
  height @width
  float left
#drop.hover
  border $mT dashed #0c0
img 
  vertical-align top